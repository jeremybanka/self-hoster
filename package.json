{
	"name": "self-hoster",
	"type": "module",
	"scripts": {
		"start": "nohup dotenv flightdeck >> logs/flightdeck.jsonl 2> /dev/null &",
		"stop": "kill $(pgrep node) $(pgrep bun)",
		"inspect": "lnav logs/flightdeck.jsonl",
		"setup": "dotenv setup-db"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.15.3",
		"bun-types": "1.2.11",
		"dotenv-cli": "8.0.0",
		"drizzle-kit": "0.31.0",
		"flightdeck": "0.2.29",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"tempest.games": "^0.2.2"
	}
}
