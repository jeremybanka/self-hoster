{
	"name": "self-hoster",
	"type": "module",
	"scripts": {
		"start": "nohup dotenv flightdeck >> logs/flightdeck.jsonl 2> /dev/null &",
		"stop": "kill $(pgrep node) $(pgrep bun)",
		"inspect": "lnav logs/flightdeck.jsonl",
		"setup": "dotenv setup-db"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@types/bun": "npm:bun-types@1.3.1",
		"@types/node": "24.9.1",
		"dotenv-cli": "10.0.0",
		"drizzle-kit": "0.31.5",
		"flightdeck": "0.2.87",
		"typescript": "5.9.3"
	},
	"dependencies": {
		"tempest.games": "^0.2.65"
	}
}
