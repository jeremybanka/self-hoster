{
	"cSpell.words": ["flightdeck", "hoster", "outfile"],
	"json.schemas": [
		{
			"fileMatch": ["**/flightdeck.config.json"],
			"url": "./node_modules/flightdeck/dist/flightdeck.main.schema.json"
		}
	],
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit"
	},
	"[NGINX]": {
		"editor.defaultFormatter": "hangxingliu.vscode-nginx-conf-hint"
	},
	"files.associations": {
		".env.*": "properties"
	}
}
